<% layout("/layouts/boilerplate.ejs") %>

  <div class="row mt-3">
    <div class="col-8 offset-2">
    <h2>Edit your listing</h2>
     <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
   <div class="mb-3">
    <label for="title" class="form-label"> Title</label>
    <input value="<%=listing.title%>" name="listing[title]" type="text" class="form-control" required>
    <div class="valid-feedback">Title looks good!</div>
   </div>
   <div class="mb-3 ">
    Original Image<br>
   <img src="<%= originalImageUrl %>" style="height: 150px; width: 250px; border-radius: 10px;">
   </div>




   <div class="mb-3">
    <label for="image" class="form-label"> Upload new Image</label>
    <input value="<%=listing.image%>" name="listing[image]" type="file" class="form-control">
   </div>

   <div class="mb-3">
    <label for="Description" class="form-label"> Description</label>
    <textarea  name="listing[description]" class="form-control" required>  <%=listing.description%></textarea>
 
   <div class="invalid-feedback">please enter a short description </div>
   </div>
     <div class="row">     

      <div class="mb-3 col-md-4">
      
        <label for="Price" class="form-label"> Price</label>
        <input  value="<%=listing.price%>" name="listing[price]" type="number" class="form-control" required>
        <div class="invalid-feedback">price should be a valid</div>
        </div>
    

    


      <div class="mb-3 col-md-8">

        <label for="country" class="form-label"> Country</label>
        <input value="<%=listing.country%>" name="listing[country]" type="country" class="form-control" required>
        <div class="invalid-feedback">country  should be a valid</div>
        </div>
      </div>
   

    <div class="mb-3">
      <label for="location" class="form-label"> Location</label>

      <input value="<%=listing.location%>" name="listing[location]" type="text" class="form-control" required>
      <div class="invalid-feedback">location should be a valid</div>
      </div>


      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select name="listing[category]" id="category" multiple class="form-select" required aria-label="Multiple select example">
     
            <option value="Trending"> Trending</option>
            <option value="Rooms">Rooms</option>
            <option value="Boats">Boats</option>
            <option value="Domes">Dooms</option>
            <option value="Iconic cities">Iconic Cities</option>
            <option value="Mountains">Mountains </option>
           
        </select>
    </div>

     

  
  
    <button class="btn btn-dark edit-btn mb-4">Edit</button>
</form>
</div>
</div>

